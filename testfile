    agent any
    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '10')
        timeout(3)
        timestamps()
    }
    stages {
        stage('Setup parameters') {
            steps {
                script { 
                    properties([
                        parameters([

                            choice( choices: ['d','e'], description: '''DC to Switch to:
                                d = Chicago 
                                e = San-Jose''', name: 'DC'),
                                string( defaultValue: '', description: 'Please add your user so we can track the swcitches ', name: 'RUN_BY', trim: false
                                extendedChoice description: 'ETP Product Services', multiSelectDelimiter: ',', name: 'PRODUCT', quoteValue: false, saveJSONParameterToFile: false, type: 'PT_CHECKBOX', value: 'etp-reports,etp-passive,etp-intel,service.etp_intel,service.etp_eaadp_service,service.etp_notifications', visibleItemCount: 10
                            )

                        ])
                        
                    ])
                }
            }
        }
    }   
}
